    <?php
    $weapons = ['fists', 'whip', 'gun'];
    $opponentWeapon = $weapons[rand(0,2)]; // Cela permet de choisir une arme de manière aléatoire.
    $indyWeapon = '???';
    
    if ($opponentWeapon === 'fists') 
    {
        $indyWeapon = 'whip';
    } elseif ($opponentWeapon === 'whip') 
    {
        $indyWeapon = 'fists';
    } else {
        $indyWeapon = 'gun';
    };


    ?>
